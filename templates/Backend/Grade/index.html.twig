{% extends 'base.html.twig' %}

{% block title %}
	Administration des Grade
	{{ parent() }}
{% endblock %}

{% block body %}
	<section>
		<h1>Administration des Grade</h1>
		<a href="{{ path('app_artillerie_new') }}" class="">Cr√©er un grade</a>
		<div>
			<table>
				<thead>
					<tr scope="row">
						<th scope="col" data-field="id">ID</th>
						<th scope="col" data-field="nom">Nom</th>

					</tr>

				</thead>
				<tbody>
					{% for grade in grades %}
						<tr>
							<td>{{grade.id}}</td>
							<td>{{grade.nom}}</td>
							<td>
								<div>
									<a href="{{ path('app_grade_edit', {'id': grade.id}) }}" class="">Modifier</a>
									{% include "Backend/Grade/_delete_form.html.twig" %}
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td>Pas de grade</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>
{% endblock %}
