{% extends "baselog.html.twig" %}

{% block title %}
	Se connecter
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-3">
		<h1>Se connecter</h1>
		<form action="{{ path('app.login') }}" method="post" class="card p-3 w-50 mx-auto mt-3">
			{% if error %}
				<div class="alert alert-danger" role="alert">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			<div class="mt-2 mb-5 ">
				<label for="email" class="form-label">Email</label>
				<input type="email" id="email" name="_username" value="{{ lastUsername}}" class="form-control" placeholder="homeless@exemple.com">
			</div>

			<div class="mb-4">
				<label for="password" class="form-label toggle-password-container">Password</label>
				<input type="password" id="password" name="_password" class="form-control" placeholder="S3CR3T">
			</div>

		</form>

		<input type="hidden" name="csrf_token" value=" {{ csrf_token('authenticate') }}">
		<button type="submit" class="btn btn-primary">Connexion</button>
	</section>
{% endblock %}
